{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Average Income per LGA (WA)",
  "width": 800,
  "height": 600,
  "params": [
    {
      "name": "year_selection",
      "bind": {
        "input": "select", "options": ["2011-12", "2012-13", "2013-14", "2014-15", "2015-16", "2016-17", "2017-18"]
      }
    }
  ],
  "transform": [{
      "lookup": "properties.wa_lga_s_3",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/Henry-Delbridge/FIT3179-S2-2021/main/assignment2/datasets/income_year_lga.csv"
        },
        "key": "LGA",
        "fields": ["Income"]
      }
    },
    {"filter": "datum.Year == year_selection"}
  ],
  "data": {
    "url": "https://raw.githubusercontent.com/Henry-Delbridge/FIT3179-S2-2021/main/assignment2/js/wa_lga_topo.json",
    "format": {
      "type": "topojson",
      "feature": "wa_lga"
    }
  },
  "projection": {
    "type": "equirectangular",
    "center": [116, -32],
    "scale": 30000
  },
  "layer": [
    {
      "mark": {
        "type": "geoshape"
      },
      "encoding": {
        "color": {
          "field": "Income",
          "type": "quantitative",
          "scale": {"type": "linear"}
        },
        "tooltip": [
          {"field": "properties.wa_lga_s_3", "type": "nominal", "title": "LGA"},
          {"field": "Income", "type": "quantitative"}
        ]
      }
    }
  ]
}